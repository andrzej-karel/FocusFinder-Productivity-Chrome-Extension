{
  "manifest_version": 3,
  "name": "FocusFinder Widget: Browse, For A Reason",
  "version": "1.1.18",
  "description": "Answer: Why are you visiting this site? → this goal remains visible alongside a timer, reminding you to stay mindful and productive.",
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "scripting",
    "windows",
    "idle"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module",
    "persistence": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "css/common.css", 
        "css/contentScript.css", 
        "css/fonts.css",
        "css/fonts/Inter-Regular.woff2",
        "css/fonts/Inter-Medium.woff2",
        "css/fonts/Inter-SemiBold.woff2",
        "css/fonts/Inter-Bold.woff2",
        "sounds/bubble.mp3"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
